<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #E4AEC5 !important;">
        <div class="container">
          <a class="navbar-brand" href="/">
              <span>Nagano Cake</span>
          </a>

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
                 <li class="nav-item">
                   <%= link_to customers_mypage_path, class: 'nav-link text-light' do %>
                   <i class="fas fa-home"></i>  マイページ
                   <% end %>
                 </li>

                 <li class="nav-item">
                   <%= link_to items_path, class: 'nav-link text-light' do %>
                   <i class="fas fa-home"></i>  商品一覧
                   <% end %>
                 </li>

                 <li class="nav-item">
                   <%= link_to cart_items_path, class: 'nav-link text-light' do %>
                   <i class="fas fa-home"></i>  カート
                   <% end %>
                 </li>

                 <li class="nav-item">
                   <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
                 <i class="fas fa-home"></i>  ログアウト
                   <% end %>
                 </li>
            <% else %>

                 <li class="nav-item">
                   <%= link_to about_path class: 'nav-link text-light' do %>
                   about
                   <% end %>
                 </li>

                 <li class="nav-item">
                   <%= link_to items_path class: 'nav-link text-light' do %>
                 <i class="fas fa-home"></i>  商品一覧
                   <% end %>
                 </li>

                 <li class="nav-item">
                   <%= link_to new_customer_registration_path class: 'nav-link text-light' do %>
                 <i class="fas fa-home"></i>  新規登録
                   <% end %>
                 </li>

                 <li class="nav-item">
                   <%= link_to new_customer_session_path class: 'nav-link text-light' do %>
                 <i class="fas fa-home"></i>  ログイン
                   <% end %>
                 </li>
            <% end %>
           </ul>
         </div>
       </div>
     </nav>
   </header>

    <%= yield %>
  </body>
</html>
