<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path do |f| %>

  <label for="inputname">商品名</label><br>
  <%= f.file_field :item_image, accept: "image/*" %><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名" %><br>
  <label for="inputIntroduction">商品説明</label><br>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"商品説明" %><br>
  <label for="inputPrice">税抜価格</label><br>
  <%= f.text_area :price, autofocus: true, id:"inputPrice", placeholder:"税抜価格" %><br>
  <label for="inputGenre_id">ジャンル</label><br>
  <%= f.select :genre_id, options_from_collection_for_select(@genres, :id, :name), autofocus: true, id:"inputGenre_id", placeholder: @item.genre.name %><br>
  
  <label for="inputIs_active">販売ステータス</label><br>
  <%= f.radio_button :is_active, :true %>
  <p>販売中</p>
  <%= f.radio_button :is_active, :false %> <br>
  <p>販売停止中</p>
  
  <%= f.submit '変更を保存' %>
<% end %>