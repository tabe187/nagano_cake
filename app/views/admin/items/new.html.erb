<h1>商品新規登録</h1>
 <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <h4>商品画像</h4>
      <%= f.file_field :item_image, accept: "image/*" %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>商品説明</h4>
      <%= f.text_area :introduction %>
    <h4>ジャンル</h4>
    <%= f.select :genre_id, options_from_collection_for_select(@genres, :id, :name) %>
    <h4>税抜価格</h4>
    <%= f.text_field :price %>  
    <h4>販売ステータス</h4>
    <%= f.radio_button :is_active, :true %>
    <p>販売中</p>
    <%= f.radio_button :is_active, :false %> <br>
    <p>販売停止中</p>
    <%= f.submit '新規投稿' %>
  <% end %>
  
