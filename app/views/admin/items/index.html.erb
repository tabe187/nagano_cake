<h1>商品一覧</h1>

<% @items.each do |item| %>
<div>
  <p>商品ID：<%= item.id %></p>
  <p>商品名：<%= link_to item.name, admin_item_path(item.id) %></p>
  <p>税込価格：<%= item.price %></p>
  <p>ジャンル: <%= item.genre.name %></p>
  <p>ステータス：
  <% if item.is_active == true %>
   販売中
  <% else %>
   販売停止中
  <% end %>
  </p>
</div>
<% end %>

