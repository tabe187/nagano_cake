<main>
<div class="container px-5 px-sm-0">
  <h4>商品一覧</h4>　
 　   <div class="row">
          <% @items.each do |item| %>
        <div class="col-xl-2">
            <p>商品ID：<%= item.id %></p>
        </div>   
        <div class="col-xl-2">
            <p>商品名：<%= link_to item.name, admin_item_path(item.id) %></p>
        </div>   
        <div class="col-xl-2">    
            <p>税込価格：<%= item.price %></p>
        </div>   
        <div class="col-xl-2">    
            <p>ジャンル: <%= item.genre.name %></p>
        </div>   
        <div class="col-xl-2">    
            <p>ステータス：
            <% if item.is_active == true %>
             販売中
            <% else %>
             販売停止中
            <% end %>
            </p>
         </div> 
        <p>-----------------------------------------------------------------------------------------------------------------------------------------------------------</p>
          <% end %>
      </div> 
      <%= paginate @items %>
</div>     
</main>

