<h1>商品詳細</h1>
<div>
  <%= image_tag @item.get_item_image(100,100) %>
  <p>商品名：<%= @item.name %></p>
  <p>商品説明：<%= @item.introduction %></p>
  <p>¥<%= @item.price %>(税込)</p>

  <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
  <%= f.select :amount, [["1"], ["2"], ["3"], ["4"], ["5"], ["6"], ["7"], ["8"]], include_blank: "個数選択" %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.submit 'カートに入れる' %>
  <% end %>
</div>
