<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customers_mypage_edit_path do |f| %>

  <label for="inputLast_name">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"性" %>
  <label for="inputFirst_name"></label>
  <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"名" %><br>
  
  <label for="inputLast_name_kana">フリガナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"セイ" %>
  <label for="inputFirst_name_kana"></label>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"メイ" %><br>
  
  <label for="inputPostal_code">郵便番号</label>
  <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %><br>
  
  <label for="inputAddress">住所</label>
  <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %><br>
  
  <label for="inputTelephone_number">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号" %><br>
  
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %><br>
  
  
  <%= f.submit "編集内容を保存" %>
  <%= link_to "退会", customers_mypage_unsubscribe_path %>
<% end %>